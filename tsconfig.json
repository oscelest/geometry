{
  "compilerOptions": {
    "target":                           "es6",
    "esModuleInterop":                  true,
    "forceConsistentCasingInFileNames": true,
    "strict":                           true,
    "skipLibCheck":                     true,
    "module":                           "ESNext",
    "declaration":                      true,
    "declarationDir":                   "types",
    "sourceMap":                        true,
    "outDir":                           "dist",
    "moduleResolution":                 "node",
    "allowSyntheticDefaultImports":     true,
    "emitDeclarationOnly":              true
  },
  "include":         [
    "src/*.ts",
    "src/*.tsx"
  ],
  "exclude":         [
    "**/node_modules/*"
  ]
}
